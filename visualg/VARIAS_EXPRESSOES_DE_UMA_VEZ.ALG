Algoritmo "varias_expressoes_de_uma_vez"

Var
   idade : inteiro
   salario : real
   nome : caractere

Inicio
   idade <- 32
   salario <- 4560.9
   nome <- "Maria Silva"
   escreval("A funcionaria ", nome, " ganha ", salario:8:2, " e tem ", idade, " anos.")
    //concatenacao de variaveis (separar por virgulas)

Fimalgoritmo